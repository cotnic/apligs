<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_oglas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nacepc.apligs.OglasActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:id="@+id/tvNaslov"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNaslov"
        android:layout_marginTop="48dp"
        android:id="@+id/tvOpis"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pošlji Sporočilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="funkcijaPosljiSporociloEna"
        android:id="@+id/bPosljiSporocilo"
        android:layout_marginBottom="36dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/bPosljiSporocilo"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:id="@+id/etPosljiSporocilo"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />
</RelativeLayout>
